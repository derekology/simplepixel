{
  "name": "simple-pixel",
  "version": "1.0.0",
  "description": "Privacy-first, simple visitor tracking for small businesses and individuals",
  "main": "dist/server/server.js",
  "type": "module",
  "scripts": {
    "build:frontend": "cd src/frontend && npm install && npm run build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "node dist/server/server.js",
    "dev": "tsx watch src/server/server.ts",
    "dev:nodemon": "nodemon",
    "dev:inspect": "tsx watch --inspect src/server/server.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "pixel",
    "tracking",
    "analytics",
    "privacy"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "geoip-lite": "^1.4.10",
    "ua-parser-js": "^2.0.8",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.14.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
